{% comment %}
  testing section for custom typography styles
  testing section for custom typography styles description
{% endcomment %}

{{ 'test.css' | asset_url | stylesheet_tag }}

{%- style -%}
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.50 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.50 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {% if section.settings.background_image != blank %}
    .catskill-video-{{ section.id }}.has-background::before {
      background-image: url('{{ section.settings.background_image | image_url: width: 2400 }}');
      opacity: {{ section.settings.background_opacity | divided_by: 100.0 }};
    }
  {% endif %}

{%- endstyle -%}


<div class="testing-section-wrapper testing-section-{{ section.id }} color-{{ section.settings.color_scheme }} gradient{% if section.settings.background_image != blank %} has-background{% endif %}">
    <div class="testing-section isolate{% unless section.settings.full_width %} page-width{% endunless %} section-{{ section.id }}-padding">
    
        <div style="{% render 'typography-style', settings: section.settings.heading_style %}">
        This is a heading styled text block
        </div>
    
        <div style="{% render 'typography-style', settings: section.settings.body_style %}">
        This is a body styled text block
        </div>
        
        {% render 'button', 
            link: '/collections/all', 
            label:  "Shop All",
            style_class: "ms-primary-sm-btn"
        %}
    
    </div>
    
     
</div>



{% schema %}
{
  "name": "MS Custom Testing Section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        },
        {
          "value": "hxl",
          "label": "Extra Large"
        },
        {
          "value": "hxxl",
          "label": "XX Large"
        }
      ],
      "default": "h0",
      "label": "Heading size"
    },
    
   
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "MS Custom Testing Section"
    }
  ]
}
{% endschema %}